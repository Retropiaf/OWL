<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.owl.sleepSession.NewSleepSessionActivity">

    <Spinner
        android:id="@+id/chooseCirclespinner"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/new_sleep_session_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_sleep_session" />

    <Button
        android:id="@+id/start_monitoring_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_monitoring" />


</android.widget.LinearLayout>
